{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@starwars/components": [
        "components/index.ts"
      ],
      "@starwars/api": [
        "api/index.ts"
      ],
      "@starwars/utils": [
        "utils/index.ts"
      ],
      "@starwars/assets": [
        "assets"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "public"],
  }
